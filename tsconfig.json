{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "@Controllers/*": ["Controllers/*"],
      "@Services/*": ["Services/*"],
      "@Structure/*": ["Structure/*"],
      "@Routes/*": ["Routes/*"],
      "@Helpers/*": ["Helpers/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
